<div class="container">
  <h1>Welcome to Sinatra!</h1>
  <p>Hello, world!</p>

  <table>
    <tr>
      <th>File Description</th>
      <th>File Location</th>
    </tr>
    <tr>
      <td>This view file</td>
      <td><code><%= __FILE__.gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The layout file</td>
      <td><code><%= File.expand_path('../layout.erb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
    <tr>
      <td>The current controller</td>
      <td><code><%= File.expand_path('../../controllers/index.rb', __FILE__).gsub(Sinatra::Application.root, '') %></code></td>
    </tr>
  </table>
  <br><br>
  <form action="/cool_url" method="get">
  <label>Get Method form</label><br>
  <input type="text" name="post[text]"><br>
  <input type="textarea" name="post[textarea]"><br>
  First Radio Button<input type="radio" name="post[radio1]"><br>
  Second Radio Button<input type="radio" name="post[radio2]"><br>
  <input type="submit" value="submit it">
  </form>
  <br>
  <form action="/cool_url" method="post">
  <label>Post Method form</label><br>
  <input type="text" name="post[text]"><br>
  Checkbox<input type="checkbox" name="post[checkbox]" ><br>
  <input type="submit" value="submit it">
  </form>

</div>
